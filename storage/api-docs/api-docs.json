            "StoreBookRequest": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "required": [
                                "title",
                                "author",
                                "genres"
                            ],
                            "properties": {
                                "title": {
                                    "$ref": "#/components/schemas/Book/properties/title"
                                },
                                "author": {
                                    "$ref": "#/components/schemas/Book/properties/author"
                                },
                                "genres": {
                                    "$ref": "#/components/schemas/Book/properties/genres"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
