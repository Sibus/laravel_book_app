    "components": {
        "schemas": {
            "BookResource": {
                "properties": {
                    "data": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 1
                            },
                            "name": {
                                "type": "string",
                                "maxLength": 255,
                                "example": "Улитка на склоне"
                            },
                            "author": {
                                "type": "string",
                                "maxLength": 255,
                                "example": "Аркадий и Борис Стругацкие"
                            },
                            "rating": {
                                "type": "decimal",
                                "maximum": 5,
                                "minimum": 1,
                                "example": 4.5,
                                "nullable": true
                            },
                            "genres": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "example": [
                                    "Фантастика",
                                    "Приключение"
                                ]
                            },
                            "created_at": {
                                "type": "string",
                                "example": "2023-01-13T11:54:41.000000Z",
                                "nullable": true
                            },
                            "updated_at": {
                                "type": "string",
                                "example": "2023-01-13T11:54:41.000000Z",
                                "nullable": true
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "Book": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "TITLE"
                    },
                    "author": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "AUTHOR"
                    },
                    "rating": {
                        "type": "number",
                        "format": "float",
                        "maximum": 5,
                        "minimum": 1,
                        "example": 4.5,
                        "nullable": true
                    },
                    "genres": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "example": [
                            "GENRE1",
                            "GENRE2"
                        ]
                    },
                    "created_at": {
                        "type": "integer",
                        "example": 1671442737
                    },
                    "updated_at": {
                        "type": "integer",
                        "example": null,
                        "nullable": true
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "Book": {
                "description": "Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/BookResource"
                        }
                    }
                }
            },
            "422": {
                "description": "Data Validation Failed",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "The title field is required. (and 2 more errors)"
                                },
                                "errors": {
                                    "additionalProperties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "example": "This field is required."
                                        }
                                    }
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "404": {
                "description": "Not Found",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "No query results for model [App\\Models\\Book] 1"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "parameters": {
            "page": {
                "name": "page",
                "in": "query",
                "schema": {
                    "type": "integer",
                    "example": 1
                }
            },
            "title": {
                "name": "title",
                "in": "query",
                "schema": {
                    "$ref": "#/components/schemas/Book/properties/title"
                }
            },
            "author": {
                "name": "author",
                "in": "query",
                "schema": {
                    "$ref": "#/components/schemas/Book/properties/author"
                }
            },
            "genres": {
                "name": "genres[]",
                "in": "query",
                "schema": {
                    "$ref": "#/components/schemas/Book/properties/genres"
                }
            }
        },
        "requestBodies": {
            "SearchBookRequest": {
                "required": true,
                "content": {
                    "application/json": {
